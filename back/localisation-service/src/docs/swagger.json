{
    "openapi": "3.0.0",
    "info": {
      "title": "Localisation Service - Madagascar",
      "version": "1.0.0",
      "description": "Service de gestion des régions et villages de Madagascar"
    },
    "paths": {
      "/localisation/regions": {
        "get": {
          "summary": "Liste des régions",
          "tags": ["Localisation"],
          "responses": {
            "200": {
              "description": "Liste des régions",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/Region" }
                  }
                }
              }
            }
          }
        }
      },
      "/localisation/region-from-village/{village_id}": {
        "get": {
          "summary": "Get one région by village",
          "tags": ["Localisation"],
          "parameters": [
            {
              "name": "village_id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              },
              "description": "ID de la village"
            }
          ],
          "responses": {
            "200": {"description": "Région cible retourné"},
            "404": {"description": "Région cible non trouvé"},
            "500": {"description": "Erreur serveur"}
          }
        }
      },
      "/localisation/regions/{id}/villages": {
        "get": {
          "summary": "Villages d'une région",
          "tags": ["Localisation"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": {
              "description": "Liste de villages",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/Village" }
                  }
                }
              }
            }
          }
        }
      },
      "/localisation/villages/{id}/coords": {
        "get": {
          "summary": "Coordonnées GPS du village",
          "tags": ["Localisation"],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": {
              "description": "Coordonnées GPS",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "latitude": { "type": "number" },
                      "longitude": { "type": "number" }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Village non trouvé"
            }
          }
        }
      },
      "/localisation/user-location": {
        "post": {
          "summary": "Associer une localisation à un utilisateur",
          "tags": ["Localisation"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user_id": { "type": "string" },
                    "location_id": { "type": "string" }
                  },
                  "required": ["user_id", "location_id"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Association confirmée"
            },
            "400": {
              "description": "Champs requis manquants"
            },
            "404": {
              "description": "Village non trouvé"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Region": {
          "type": "object",
          "properties": {
            "_id": { "type": "string" },
            "name": { "type": "string" }
          }
        },
        "Village": {
          "type": "object",
          "properties": {
            "_id": { "type": "string" },
            "region_id": { "type": "string" },
            "name": { "type": "string" },
            "latitude": { "type": "number" },
            "longitude": { "type": "number" },
            "users_ids": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    }
  }
  