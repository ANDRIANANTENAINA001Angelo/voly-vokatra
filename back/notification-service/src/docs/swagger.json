{
    "openapi": "3.0.0",
    "info": {
      "title": "Notification Service",
      "version": "1.0.0"
    },
    "paths": {
      "/notifications": {
        "get": {
          "summary": "Lister les notifications d'un utilisateur",
          "parameters": [
            {
              "in": "query",
              "name": "user_id",
              "required": true,
              "schema": { "type": "string" }
            }
          ],
          "responses": {
            "200": {
              "description": "Liste de notifications"
            }
          }
        }
      },
      "/notifications/notify": {
        "post": {
          "summary": "Envoyer une notification",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user_id": { "type": "string" },
                    "type": { "type": "string" },
                    "message": { "type": "string" }
                  },
                  "required": ["user_id", "type", "message"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Notification créée"
            }
          }
        }
      }
    }
  }

  
  